<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

	
      
    </div>
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit'Create Book' %>
    <% end %>
    
    <h1>book list</h1>
    <%= @books.each do |list| %>
      <h4>Title</h4>
      <%= list.title %>
      <h4>Opinion</h4>
      <%= list.body %>
    <% end %>
    
  </div>
</div>
